@{
    ViewData["Title"] = "Allenatori Pokémon";

    var trainers = new List<dynamic> {
        new { Nome = "Ash", Eta = 10, Citta = "Pallet Town", Gym = "Verde", Pokemons = 3 },
        new { Nome = "Misty", Eta = 12, Citta = "Cerulean", Gym = "Acqua", Pokemons = 4 },
        new { Nome = "Brock", Eta = 15, Citta = "Pewter", Gym = "Roccia", Pokemons = 2 }
    };
}

<div class="container py-5">
    <h2 class="text-white fw-bold mb-4 text-center">Allenatori Pokémon</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success rounded-pill fw-semibold" href="#">Aggiungi Allenatore</a>
    </div>

    <div class="row g-4">
        @foreach (var trainer in trainers)
        {
            <div class="col-md-4">
                <div class="card bg-dark text-white border-light shadow rounded-4">
                    <div class="card-body">
                        <h5 class="card-title text-info">@trainer.Nome</h5>
                        <p><strong>Età:</strong> @trainer.Eta</p>
                        <p><strong>Città:</strong> @trainer.Citta</p>
                        <p><strong>Palestra:</strong> @trainer.Gym</p>
                        <p><strong>Pokémon:</strong> @trainer.Pokemons</p>

                        <div class="d-flex gap-2 mt-3">
                            <a class="btn btn-primary rounded-pill" href="#">Dettagli</a>
                            <a class="btn btn-warning rounded-pill" href="#">Modifica</a>
                            <a class="btn btn-danger rounded-pill" href="#">Elimina</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
