<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationPokemon.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="d-flex justify-content-between align-items-center px-4 py-2 border-bottom shadow-sm bg-white">
        <nav class="d-flex gap-3">
            <a asp-controller="Gym" asp-action="Index" class="btn btn-outline-primary fw-semibold">Palestre</a>
            <a asp-controller="Trainer" asp-action="Index" class="btn btn-outline-primary fw-semibold">Allenatori</a>
            <a asp-controller="Pokemon" asp-action="Index" class="btn btn-outline-primary fw-semibold">Pokémon</a>
        </nav>

        <div>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-2 px-4">Accedi</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-secondary px-4">Registrati</a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
