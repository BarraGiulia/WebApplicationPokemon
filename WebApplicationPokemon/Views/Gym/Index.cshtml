@{
    ViewData["Title"] = "Palestre Pokémon";

    var gyms = new List<dynamic> {
        new { Nome = "Palestra di Pewter", Citta = "Pewter", Allenatori = 2 },
        new { Nome = "Palestra di Cerulean", Citta = "Cerulean", Allenatori = 1 },
        new { Nome = "Palestra di Vermilion", Citta = "Vermilion", Allenatori = 1 }
    };
}

<div class="container py-5">
    <h2 class="text-white fw-bold mb-4 text-center">Palestre Pokémon</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success rounded-pill fw-semibold" href="#">Aggiungi Palestra</a>
    </div>

    <div class="row g-4">
        @foreach (var gym in gyms)
        {
            <div class="col-md-4">
                <div class="card bg-dark text-white border-light shadow rounded-4">
                    <div class="card-body">
                        <h5 class="card-title text-warning">@gym.Nome</h5>
                        <p><strong>Città:</strong> @gym.Citta</p>
                        <p><strong>Allenatori:</strong> @gym.Allenatori</p>

                        <div class="d-flex gap-2 mt-3">
                            <a class="btn btn-primary rounded-pill" href="#">Dettagli</a>
                            <a class="btn btn-warning rounded-pill" href="#">Modifica</a>
                            <a class="btn btn-danger rounded-pill" href="#">Elimina</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
