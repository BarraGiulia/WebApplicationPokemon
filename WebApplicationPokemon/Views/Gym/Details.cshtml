@{
    ViewData["Title"] = "Dettagli Palestra";

    var gym = new
    {
        Nome = "Palestra di Pewter",
        Citta = "Pewter",
        Allenatori = 2
    };
}

<div class="container py-5 text-white">
    <h2 class="text-center mb-4">Dettagli Palestra</h2>

    <div class="card bg-dark border-light shadow rounded-4 p-4">
        <h3>@gym.Nome</h3>
        <p><strong>Città:</strong> @gym.Citta</p>
        <p><strong>Allenatori:</strong> @gym.Allenatori</p>

        <div class="mt-4">
            <a class="btn btn-secondary rounded-pill" href="#">Torna indietro</a>
        </div>
    </div>
</div>
